{
  "package": {
    "dependencies": {},
    "scripts": {
      "depfix": "node ./scripts/dependencyFix.js && npm run prettier --write package.json && npm install",
      "format": "prettier --write \"src/**/*.ts\" \"src/**/*.tsx\"",
      "lint": "eslint --fix \"src/**/*.ts\" \"src/**/*.tsx\""
    },
    "husky": {
      "hooks": {
        "pre-commit": "lint-staged"
      }
    },
    "lint-staged": {
      "*.{ts,tsx}": [
        "eslint --fix",
        "prettier --write",
        "git add"
      ]
    },
    "jest": {
      "transform": {
        "^.+\\.tsx?$": "ts-jest"
      },
      "transformIgnorePatterns": [
        "node_modules/(?!office-ui-fabric-react)"
      ],
      "snapshotSerializers": [
        "enzyme-to-json/serializer",
        "jest-emotion"
      ],
      "moduleNameMapper": {
        "office-ui-fabric-react/lib/(.*)$": "office-ui-fabric-react/lib-commonjs/$1"
      }
    }
  }
}
